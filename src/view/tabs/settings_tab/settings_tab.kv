<SettingsTab>:
    MDGridLayout:
        pos_hint: {"x": 0, "top": 1}
        cols: 2
        rows: 9
        padding: 20, 20, 20, 20
        spacing: 20, 10
        size_hint_y: None
        row_default_height: 20

        # //////////

        MDLabel:
            id: lb_url
            text: "URL"
            size_hint_x: 1.4

        MDTextField:
            id: tf_url
            mode: "rectangle"
            hint_text: "URL"
            helper_text_mode: "persistent"
            on_text: root.set_url(self.text)
            size_hint_x: 4.6

        # //////////

        MDLabel:
            id: lb_token
            text: "Token"
            size_hint_x: 1.4

        MDTextField:
            id: tf_token
            mode: "rectangle"
            hint_text: "Token"
            helper_text_mode: "persistent"
            on_text: root.set_token(self.text)
            size_hint_x: 4.6

        # //////////

        MDLabel:
            id: lb_excel_path
            text: "Excel Path"
            size_hint_x: 1.4

        MDTextField:
            id: tf_excel_path
            mode: "rectangle"
            hint_text: "Excel Path"
            helper_text_mode: "persistent"
            on_text: root.set_excel_path(self.text)
            size_hint_x: 4.6

        # //////////
        # predefines

        MDLabel:
            id: lb_output_folder
            text: "Output Folder"
            size_hint_x: 1.4

        MDTextField:
            id: tf_output_folder
            mode: "rectangle"
            hint_text: "Output Folder"
            helper_text_mode: "persistent"
            on_text: root.set_output_folder(self.text)
            size_hint_x: 4.6

    # ////////////////////////////////////////
