<CheckoutTab>:
    MDGridLayout:
        pos_hint: {"x": 0, "top": 1}
        cols: 3
        rows: 3
        padding: 20, 20, 20, 20
        spacing: 20, 10
        size_hint_y: None
        row_default_height: 20

        # //////////

        MDLabel:
            id: lb_file
            text: "File"
            size_hint_x: 1.4

        MDTextField:
            id: tf_file
            mode: "rectangle"
            hint_text: "Filename"
            helper_text: "Press the button to launch File Explorer"
            helper_text_mode: "persistent"
            on_text: root.filepath = self.text
            size_hint_x: 4.6

        MDRoundFlatIconButton:
            text: "Open"
            icon: "folder"
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            on_release: root.open_filebrowser()
            size_hint_x: 1.2

        # ////////////////////////////////////////

        MDLabel:
            id: lb_autostart
            text: "Autostart Excel"

        MDCheckbox:
            size_hint: None, None
            size: "48dp", "48dp"
            on_active: root.autostart = self.active

        Widget:

        # ////////////////////////////////////////

        MDLabel:
            id: lb_auto_upload
            text: "Autoupload"

        MDCheckbox:
            size_hint: None, None
            size: "48dp", "48dp"
            on_active: root.auto_upload = self.active

        Widget:

    # ////////////////////////////////////////

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        padding: 40, 40, 40, 40

        MDRaisedButton:
            text: "Create"
            on_press: root.on_template_create()
