<CreateAssetTab>:
    MDGridLayout:
        pos_hint: {"x": 0, "top": 1}
        cols: 3
        rows: 7
        padding: 20, 20, 20, 20
        spacing: 20, 10
        size_hint_y: None
        row_default_height: 20

        # //////////

        MDLabel:
            id: lb_model
            text: "Model"
            size_hint_x: 1.4

        Spinner:
            id: sp_model
            values: root.selected_sit_models
            on_text: root.set_sit_model(self.text)
            size_hint_x: 4.6

        MDTextField:
            id: tf_model
            mode: "rectangle"
            hint_text: "Filter Model"
            helper_text_mode: "persistent"
            on_text: root.filter_sit_model = self.text
            size_hint_x: 1.2

        # ////////////////////////////////////////

        MDLabel:
            id: lb_quantity
            text: "Quantity"

        MDTextField:
            id: tf_quantity
            mode: "rectangle"
            hint_text: "Quantity"
            helper_text_mode: "persistent"
            input_type: "number"
            input_filter: "int"
            on_text: root.set_quantity(self.text)

        Widget:

        # ////////////////////////////////////////

        MDLabel:
            id: lb_status_label
            text: "Status Label"

        Spinner:
            id: sp_status_label
            values: root.selected_status_labels
            on_text: root.set_status_label(self.text)

        MDTextField:
            id: tf_status_label
            mode: "rectangle"
            hint_text: "Filter Status Label"
            helper_text_mode: "persistent"
            on_text: root.filter_status_label = self.text

        # ////////////////////////////////////////

        MDLabel:
            id: lb_file
            text: "File"

        MDTextField:
            id: tf_file
            mode: "rectangle"
            hint_text: "Filename"
            helper_text: "Press the button to launch File Explorer"
            helper_text_mode: "persistent"
            on_text: root.set_filepath(self.text)

        MDRoundFlatIconButton:
            text: "Open"
            icon: "folder"
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            on_release: root.open_filebrowser()

        # ////////////////////////////////////////

        MDLabel:
            id: lb_autostart
            text: "Autostart Excel"

        MDCheckbox:
            size_hint: None, None
            size: "48dp", "48dp"
            on_active: root.set_autostart(self.active)

        Widget:

        # ////////////////////////////////////////

        MDLabel:
            id: lb_auto_upload
            text: "Autoupload"

        MDCheckbox:
            size_hint: None, None
            size: "48dp", "48dp"
            on_active: root.set_auto_upload(self.active)

        Widget:

    # ////////////////////////////////////////

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        padding: 40, 40, 40, 40

        MDRaisedButton:
            text: "Create"
            on_press: root.on_template_create()
